{
  "config": {
    "sort-packages": true
  },
  "require": {
    "PHP": ">7.4",
    "psr/http-client": "^1.0",
    "symfony/dotenv": "^6.2",
    "symfony/http-client": "^6.2"
  },
  "autoload": {
    "psr-4": {
      "Src\\Http\\": "Src/Http/",
      "Src\\Services\\": "Src/Services/",
      "Src\\Notifications\\": "Src/Notifications/",
      "Src\\Factory\\": "Src/Factory/"

    }
  },
  "require-dev": {
    "vimeo/psalm": "^5.4"
  },
  "scripts": {
    "fixer": [
      "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix .",
      "vendor/bin/psalm --no-diff"

      ]
  }
}
